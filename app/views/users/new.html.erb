
<% if false%>
    <form action="/users" method="POST" accept-charset="UTF-8">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <label for="">Username:</label>
        <input type="text" name="user[username]"><br><br>
        <label for="" name="">Email:</label>
        <input type="text" name="user[email]"><br><br>
        <label for="" name="">Password</label>
        <input type="password" name="user[password]"><br><br>
        <input type="submit" value="Registrar">
    </form>
<% end %>

<%= form_tag('/users') do %>
    <%= label_tag('username') %>
    <%= text_field_tag('username') %><br><br>
    <%= label_tag('email') %>
    <%= text_field_tag('email') %><br><br>
    <%= label_tag('password') %>
    <%= password_field_tag('password') %><br><br>
    <%= submit_tag "Registrar" %>
<% end %>